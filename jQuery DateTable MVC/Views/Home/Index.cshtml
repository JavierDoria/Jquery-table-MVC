@section Estilos{
    <link href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/3.2.6/css/buttons.dataTables.css" rel="stylesheet" />
    <style>
        .btn-exportar-excel{
            background-color: #198754 !important;
            color: white !important;
        }

        .btn-exportar-pdf{
            background-color: #ff0000 !important;
            color: white !important;
        }

        .btn-exportar-imprimir{
            background-color: #6c757d !important;
            color: white !important;
        }

    </style>
}
<div class="card">
    <div class="card-header">
        Empleados
    </div>
    <div class="card-body">
        <table id="tb_empleados" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>IdEmpleado</th>
                    <th>Nombre</th>
                    <th>Cargo</th>
                    <th>Oficina</th>
                    <th>Salario</th>
                    <th>Telefono</th>
                    <th>Fecha Ingreso</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.6/js/dataTables.buttons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.6/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.6/js/buttons.print.min.js"></script>
    <script >
            $(document).ready(function () {
            $('#tb_empleados').DataTable({
                "ajax": {
                    "url": "@Url.Action("ListaEmpleados", "Home")",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "idEmpleado" },
                    { "data": "nombre" },
                    { "data": "cargo" },
                    { "data": "oficina" },
                    { "data": "salario" },
                    { "data": "telefono" },
                    { "data": "fechaIngreso" }


                ],
                "language":{
                    url: "https://cdn.datatables.net/plug-ins/2.3.6/i18n/es-ES.json"
                },
                columnDefs:[
                    {
                        targets:0,
                        visible:false
                    }
                ],
                dom: "Bfrtip",
                buttons: [
                   {
                       extend : "excelHtml5",
                       Text :"Exportar Excel",
                       filename :"Reporte de empleados",
                       title: "",
                       exportOptions :{
                       columns :[1,2,3,4,5,6]
                   },
                   className: "btn-exportar-excel"
                   },
                   {
                       extend : "pdfHtml5",
                       Text :"Exportar Pdf",
                       filename :"Reporte de empleados",
                       title: "",
                       exportOptions :{
                       columns :[1,2,3,4,5,6]
                   },
                   className: "btn-exportar-pdf"
                   },
                   {
                       extend : "print",
                       title: "",
                       exportOptions :{
                       columns :[1,2,3,4,5,6]
                   },
                   className: "btn-exportar-imprimir"
                   },
                   "pageLength"
                ]
            });
        });
        

    </script>
}
